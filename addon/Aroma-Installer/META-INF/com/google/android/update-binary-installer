#!/sbin/sh

OUTFD=$2
if [ -z $OUTFD ] || readlink /proc/$$/fd/$OUTFD | grep -q /tmp; then
  # We will have to manually find out OUTFD
  for FD in `ls /proc/$$/fd`; do
    if readlink /proc/$$/fd/$FD | grep -q pipe; then
      if ps | grep -v grep | grep -q " 3 $FD "; then
        OUTFD=$FD
        break
      fi
    fi
  done
fi

ui_print() {
  echo -e "ui_print $1\nui_print" >> /proc/self/fd/$OUTFD
}

is_mounted() {
  grep -q " `readlink -f $1` " /proc/mounts 2>/dev/null
  return $?
}

is_mounted /cache || { ui_print "Mounting /cache..."; ui_print " "; mount /cache; } || { ui_print "! Unable to mount partitions"; exit 1; }
ui_print "Saving selections..."
# Save selections to temp directory for main installer
mkdir -p /cache/$MODID
for i in /tmp/aroma/*.prop; do
  cp -f $i /cache/$MODID/$(basename $i)
done
ui_print " "
ui_print "Selections saved!"
